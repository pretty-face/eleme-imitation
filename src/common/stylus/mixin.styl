border-bottom-1px($color)
  position relative
  &::after
    display block
    position absolute
    bottom: 0
    left: 0
    width 100%
    border-top: 1px solid $color
    content ''
border-top-1px($color)
  position relative
  &::bdfore
    display block
    position absolute
    bottom: 0
    left: 0
    width 100%
    border-top: 1px solid $color
    content ''
bg-image($img)
    background-image url($img + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image url($img + "@3x.png")
